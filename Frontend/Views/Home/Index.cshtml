
@{
    ViewData["Title"] = "Index";
}
<center>
	<h1>Home</h1>
</center>


<div class="row pb-3">
	@foreach (var items in Model)
	{
		<div class="col-lg-3 col-md-6">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<img src="@items.ImageUrl" class="card-img-top rounded" />

						<div class="card-body">
							<div class="pl-1">
								<p class="card-title h5 text-primary">@items.Title</p>
								<p class="card-title text-info">by <b>@items.Author</b></p>
							</div>
							<div class="pl-1">
								<p>List Price: <strike><b>$@items.ListPrice.ToString("0.00")</b></strike></p>
							</div>
							<div class="pl-1">
								<p>As low as: <b>$@items.Price.ToString("0.00")</b></p>
							</div>
						</div>
					</div>
					<div>
						@*<a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@items.Id">
							Details
						</a>*@
					</div>
				</div>
			</div>
		</div>
	}
</div>

